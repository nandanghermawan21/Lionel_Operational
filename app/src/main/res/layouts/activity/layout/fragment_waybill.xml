<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ScrollView
            android:id="@+id/layoutInputWayBill"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">

                    <!-- Text Field -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputConsoleCodeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/way_bill_no"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/textInputWayBillNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapCharacters" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/labelWayBillNoError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?android:attr/colorError" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/dec_main_input"
                        android:orientation="vertical"
                        android:paddingBottom="2px">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20px"
                            android:paddingTop="10px"
                            android:paddingBottom="1dp"
                            android:text="@string/shipping_method"
                            android:textColor="?android:attr/textColor" />

                        <Button
                            android:id="@+id/buttonSelectShippingMethod"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="?android:attr/colorControlHighlight"
                            android:drawableEnd="@drawable/ic_menu_down"
                            android:text="@string/select_shipping_method"
                            android:textAlignment="textStart"
                            android:textColor="?android:attr/textColor"
                            android:tint="?android:attr/textColor" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/labelShippingMethodError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?android:attr/colorError" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/dec_main_input"
                        android:orientation="vertical"
                        android:paddingBottom="2px">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20px"
                            android:paddingTop="10px"
                            android:paddingBottom="1dp"
                            android:text="@string/shipping_agent"
                            android:textColor="?android:attr/textColor" />

                        <Button
                            android:id="@+id/buttonSelectShippingAgent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="?android:attr/colorControlHighlight"
                            android:drawableEnd="@drawable/ic_menu_down"
                            android:text="@string/select_shipping_agent"
                            android:textAlignment="textStart"
                            android:textColor="?android:attr/textColor"
                            android:tint="?android:attr/textColor" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/labelShippingAgentError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?android:attr/colorError" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/dec_main_input"
                        android:orientation="vertical"
                        android:paddingBottom="2px">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20px"
                            android:paddingTop="10px"
                            android:paddingBottom="1dp"
                            android:text="@string/origin"
                            android:textColor="?android:attr/textColor" />

                        <Button
                            android:id="@+id/buttonSelectOrigin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="?android:attr/colorControlHighlight"
                            android:drawableEnd="@drawable/ic_menu_down"
                            android:text="@string/select_origin"
                            android:textAlignment="textStart"
                            android:textColor="?android:attr/textColor"
                            android:tint="?android:attr/textColor" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/labelOriginError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?android:attr/colorError" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/dec_main_input"
                        android:orientation="vertical"
                        android:paddingBottom="2px">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20px"
                            android:paddingTop="10px"
                            android:paddingBottom="1dp"
                            android:text="@string/liner"
                            android:textColor="?android:attr/textColor" />

                        <Button
                            android:id="@+id/buttonSelectLiner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="?android:attr/colorControlHighlight"
                            android:drawableEnd="@drawable/ic_menu_down"
                            android:text="@string/select_liner"
                            android:textAlignment="textStart"
                            android:textColor="?android:attr/textColor"
                            android:tint="?android:attr/textColor" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/labelLinerError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?android:attr/colorError" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/layoutInputDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dec_main_input"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/way_bill_no" />

                    <TextView
                        android:id="@+id/detailWayBillNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/way_bill_no"
                        android:textAlignment="textEnd" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/shipping_method" />

                    <TextView
                        android:id="@+id/detailWayBillShippingMethod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/shipping_method"
                        android:textAlignment="textEnd" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/shipping_agent" />

                    <TextView
                        android:id="@+id/detailWayBillShippingAgent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/shipping_agent"
                        android:textAlignment="textEnd" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/destination" />

                    <TextView
                        android:id="@+id/detailWayBilDestination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/destination"
                        android:textAlignment="textEnd" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/liner" />

                    <TextView
                        android:id="@+id/detailWayBilShippingLiner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/liner"
                        android:textAlignment="textEnd" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:layout_gravity="top"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Text Field -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/SttOrConsoleNumber"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/textInputSTTCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapCharacters" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/labelSTTCodeError"
                        android:paddingTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?android:attr/colorError" />

                </LinearLayout>

                <Button
                    android:id="@+id/buttonAddShipment"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="@string/add"
                    android:height="50dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@color/gray"
                android:layout_marginBottom="50dp"
                android:layout_height="0dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewShipment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="8dp"
                    android:layout_weight="1"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonNext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="@string/next" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_red_dark"
                android:text="@string/cancel"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="@string/submit" />

            <!-- Other Navigation Buttons -->
            <!-- Add other navigation buttons here if needed -->

        </LinearLayout>

    </RelativeLayout>

</layout>